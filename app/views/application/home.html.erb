<% provide(:title, 'Welcome') %>
<% provide(:meta_description, t('seo.home')) %>
<% unless Cohort.active.blank? %>
  <%= link_to tickets_path, class: "banner" do %>
    <div class="banner-card tickets">
      <p class="banner-date"><%= Cohort.active.descriptive_date %></p>
      <p class="banner-cta-text">buy tickets</p>
    </div>
  <% end %>
<% end %>
<div class="banner-spacer"></div>
<%= link_to info_path(id: 1), class: "banner" do %>
  <div class="banner-card info"><p>info</p></div>
<% end %>

<!--This is a dirty hack to get the vh to expand when scrolling down-->
<script>
    $(document).ready(function() {
        setHeight();
    });

    $( window ).on( "orientationchange", function( event ) {
        setHeight();
    });

    function setHeight () {
        setTimeout(function () {
            $('.container').css({height: window.innerHeight - 50});
        }, 250);
    }
</script>