<div class="row">
  <div class="col-sm-12">
    <div class="pairing-card">
      <div class="row">
        <div class="col-xs-5" draggable="true">
          <div class="row"><div class="col-xs-12 pairing-player"><%= f.object.player_a.name %></div></div>
          <div class="row"><div class="col-xs-12"><%= f.object.player_a_round_aggregate&.wins %>-<%= f.object.player_a_round_aggregate&.losses %>-<%= f.object.player_a_round_aggregate&.draws %></div></div>
        </div>
        <div class="col-xs-2 text-center">
          <%= f.index + 1 %>
        </div>
        <div class="col-xs-5" draggable="true">
          <div class="row"><div class="col-xs-12 pairing-player text-right"><%= f.object.player_b.name %></div></div>
          <div class="row"><div class="col-xs-12 pairing-player text-right"><%= f.object.player_b_round_aggregate&.wins %>-<%= f.object.player_b_round_aggregate&.losses %>-<%= f.object.player_b_round_aggregate&.draws %></div></div>
        </div>
      </div>
    </div>
  </div>
  <%= f.hidden_field :player_a_id %>
  <%= f.hidden_field :player_b_id %>
  <%= f.hidden_field :player_a_points, value: 0 %>
  <%= f.hidden_field :player_b_points, value: 0 %>
</div>
