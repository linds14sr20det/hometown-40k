<div class="row">
  <div class="col-sm-12">
    <%= link_to edit_round_individual_path(pairing.id) do %>
      <div class="pairing-card">
        <div class="row">
          <div class="col-xs-5" draggable="true">
            <div class="row"><div class="col-xs-12 pairing-player"><%= pairing.player_a.name %></div></div>
            <div class="row"><div class="col-xs-12"><%= pairing.player_a_score_outcome_string %><%= pairing.player_a_points.present? ? pairing.player_a_points : 0 %></div></div>
          </div>
          <div class="col-xs-2 text-center">
            <%= index + 1 %>
          </div>
          <div class="col-xs-5" draggable="true">
            <div class="row"><div class="col-xs-12 pairing-player text-right"><%= pairing.player_b.name %></div></div>
            <div class="row"><div class="col-xs-12 pairing-player text-right"><%= pairing.player_b_score_outcome_string %><%= pairing.player_b_points.present? ? pairing.player_b_points : 0 %></div></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

