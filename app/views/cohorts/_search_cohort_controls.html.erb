<div class="form-group">
  <%= label_tag :search, "Search for an event" %>
  <%= search_field_tag(:cohort_name, "", :onkeyup => 'sendSearch()', class: 'form-control') %>
</div>

<!-- TODO: Center these tabs -->
<div class="row bottom-buffer">
  <ul class="nav nav-tabs">
    <li role="presentation" onclick="changeTab()" data-timeframe="past"><a href="#">Past</a></li>
    <li role="presentation" onclick="changeTab()" data-timeframe="current"><a href="#">In-progress</a></li>
    <li role="presentation" class="active" onclick="changeTab()" data-timeframe="future"><a href="#">Upcoming</a></li>
  </ul>
</div>

<div id="cohorts_search_results" class="row">
  <% cohorts.each do |cohort| %>
    <div class="row bottom-buffer">
      <%= render 'cohort_stub_banner', :cohort => cohort %>
    </div>
  <% end %>
</div>

<script>
  function sendSearch() {
    const searchTerm = document.querySelector("#cohort_name").value;
    const tabActive = document.querySelector(".active").getAttribute("data-timeframe");
    Rails.ajax({
      url: "<%= search_path %>",
      type: "POST",
      data: `search_term=${searchTerm}&timeframe=${tabActive}`,
      success: function (data) {
        document.querySelector("#cohorts_search_results").innerHTML = data.html;
      }
    });
  }

  function changeTab() {
    document.querySelector(".active").removeAttribute("class");
    event.currentTarget.setAttribute("class", "active");
    sendSearch();
  }
</script>
