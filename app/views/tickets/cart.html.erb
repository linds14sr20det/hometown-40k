<% provide(:title, 'Shopping Cart') %>
<% provide(:meta_description, t('seo.cart')) %>
<div class="ticket">
  <div class="ticket-title">
    Shopping cart
  </div>

  <% @cohorts.each do |cohort| %>
    <%= link_to cohorts_cart_tickets_path(:cohort_id => cohort.id) do %>
      <div class="ticket-card">
        <img class="ticket-thumb-index" src="<%= cohort.first_image %>">
        <div class="ticket-card-content">
          <div class="ticket-date">
            <%= cohort.descriptive_date %>
          </div>
          <div class="ticket-title">
            <%= cohort.name %>
          </div>
          <p>Click here to review and confirm your registration(s) for <%= cohort.name %>.</p>
        </div>
        <div class="price price-card pull-right"></div>
      </div>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-12 text-center">
      <span class="price">Total:</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="btn-group-vertical cont-shopping">
        <%= link_to "Continue shopping", tickets_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
