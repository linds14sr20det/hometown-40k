<div class="col-md-12 ticket">
    <div class="registrant-card <%= "sold-out" if registrant.system.full? %>">
      <div class="ticket-card-content">
        <div class="ticket-date small">
            <%= registrant.system.cohort.name %> - <%= registrant.system.descriptive_date %>
        </div>
        <div class="ticket-title">
          <a href="<%= ticket_path(registrant.system.id) %>"><%= registrant.system.title %></a>
          <%= link_to sanitize("Remove #{fa_icon("trash")}"), remove_from_cart_tickets_path(:uuid => registrant.uuid), :class => "pull-right remove" %>
        </div>
        <small><p><%= "Event size: #{registrant.system.max_players}" %></p></small>
        <div class="player-info">
          <span><b>Player:</b> <%= registrant.user.name %></span>
          <br>
          <span><b>Email:</b> <%= registrant.user.email %></span>
        </div>
      </div>
      <div class="price price-card pull-right"><%= number_to_currency(registrant.system.cost) %></div>
    </div>
</div>
